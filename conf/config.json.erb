{
  "bridge": {
    "name": "<%= ENV['HOMEBRIDGE_NAME'] %>",
    "username": "<%= ENV['HOMEBRIDGE_USERNAME'] %>",
    "port": <%= ENV['HOMEBRIDGE_PORT'] %>,
    "pin": "<%= ENV['HOMEBRIDGE_PIN'] %>"
  },

  "platforms": [
    {
      "platform": "cmdSwitch2",
      "name": "CMD Switch",
      "switches": [{
         "name" : "Display",
         "on_cmd": "echo 'on 0' | cec-client -d 1 -s",
         "off_cmd": "echo 'standby 0' | cec-client -d 1 -s",
         "state_cmd": "echo 'pow 0' | cec-client -d 1 -s | tail -1 | grep 'power status: on'",
         "polling": true,
         "interval": 60,
         "timeout": 10000,
         "manufacturer": "IODATA",
         "model": "LCD-M4K552XDB"
      }]
    }
  ],
  "accessories": [
    {
      "accessory": "NatureRemoAircon",
      "name": "Air Conditioner",
      "access_token": "<%= ENV['HOMEBRIDGE_NATURE_REMO_TOKEN'] %>",
      "appliance_id": ""
    },
    {
           "accessory": "DaikinAirPurifier",
           "name": "AirPurifier",
           "login_id": "<%= ENV['HOMEBRIDGE_DAIKIN_ID'] %>",
           "password": "<%= ENV['HOMEBRIDGE_DAIKIN_PASSWORD'] %>"
    },
    {
        "name": "Shade 1",
        "accessory": "MinimalisticHttpBlinds",
        "get_current_position_url": "http://raspberrypi.local:8080/getposition/<%= ENV['HOMEBRIDGE_SHADE1_ETHER'] %>",
        "set_target_position_url": "http://raspberrypi.local:8080/setposition/<%= ENV['HOMEBRIDGE_SHADE1_ETHER'] %>/%position%",
        "set_target_position_method": "GET",
        "get_current_position_polling_millis": "30000"
    },
    {
        "name": "Shade 2",
        "accessory": "MinimalisticHttpBlinds",
        "get_current_position_url": "http://raspberrypi.local:8080/getposition/<%= ENV['HOMEBRIDGE_SHADE2_ETHER'] %>",
        "set_target_position_url": "http://raspberrypi.local:8080/setposition/<%= ENV['HOMEBRIDGE_SHADE2_ETHER'] %>/%position%",
        "set_target_position_method": "GET",
        "get_current_position_polling_millis": "30000"
    },
    {
        "name": "Bath Switch",
        "accessory": "HTTP-SWITCH",
        "switchType": "stateless",
        "timeout": 1000,
        "onUrl": "<%= ENV['HOMEBRIDGE_PROTA_WEBHOOK_BATHSWITCH_URL'] %>"
    },
    {
        "name": "OpenGate",
        "accessory": "HTTP-SWITCH",
        "switchType": "stateless",
        "timeout": 1000,
        "onUrl": "<%= ENV['HOMEBRIDGE_PROTA_WEBHOOK_OPENGATE_URL'] %>"
    }
  ]
}
